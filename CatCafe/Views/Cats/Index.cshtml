@model IEnumerable<CatCafe.DataModels.Cat>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Employee"))
            {
<p>
    <a asp-action="Create">Create New</a>
</p>
            }
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adoptable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfArrival)
            </th>
            @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
            {
            <th>
                @Html.DisplayNameFor(model => model.DateOfAcquisition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdated)
            </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adoptable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfArrival)
            </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DateOfAcquisition)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
            @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
            {
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            }
            @if (item.Adoptable == true && User.Identity.IsAuthenticated)
            {
                <a asp-controller="AdoptionInquiries" asp-action="Create" asp-route-id="@item.Id">Adopt</a>
            }
               </td>
        </tr>
}
    </tbody>
</table>
